{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "prebuild": {
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"],
      "inputs": ["src/**", "package.json"]
    },
    "postbuild": {
      "dependsOn": ["build"],
      "outputs": ["build/**/*.d.ts"]
    },
    "build:watch": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "link": {
      "cache": false
    },
    "test": {
      "inputs": ["**/*.spec.ts"]
    }
  }
}
